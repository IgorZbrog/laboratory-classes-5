<nav class="navigation">
  <ul class="navigation__list">
    <% if (menuLinks.length > 0) { %> 
      <% menuLinks.forEach(link => { %>
        <li class="navigation__item">
          <a
            class="navigation__link <%= activeLinkPath === link.path ? 'navigation__link--active' : '' %>"
            href="<%= link.path %>"
          >
            <%= link.label %>
          </a>
        </li>
      <% }); %> 
    <% } %>

    <li class="navigation_item navigation_cart">
      Cart
      <img 
        src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/shopping-cart.svg" 
        alt="Cart" 
        class="navigation_cart"
      >
      <span class="navigation_badge"><%= cartCount || 0 %></span>
    </li>
  </ul>
</nav>